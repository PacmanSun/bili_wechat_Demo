.main{
  padding: 10rpx;
  color: #666;
}
/* all blocks */
.video_block{
  margin-top: 10rpx;
}

.video_block video{
  width: 100%;
}

.video_block .video_title{
  display: flex;
  justify-content: space-between;
  font-size: 35rpx;
}

.video_block .video_detail{
  margin: 5rpx;
  font-size: 28;
}

.video_detail text{
  margin-left: 12rpx;
}

.video_detail .author{
  color: #000;
}

.video_block .other-list{
  margin-top: 10rpx;
}
.other-list .otherList_item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.otherList_item .otherImg_block{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
}

.otherImg_block image{
  width: 90%;
  border-radius: 15rpx;
}

.otherList_item .otherInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 60%;
}

.otherInfo .otherTitle{
  font-size: 30rpx;
  color:#e06f93;
}

.otherInfo .otherDetail_block{
  font-size: 25rpx;
  color: #666;
}

.video_block .commentList_block{
  margin-top: 10rpx;
}

.commentList_block .commentList_title{
  padding: 10rpx;
  font-size: 28rpx;
}

.commentList_block .commmentList{

}

.commmentList .commentItem{
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  padding: 10rpx;
  border-bottom: 1px solid #666;
}

.commentItem .commentUser{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.commentUser image{
  width: 60%;
  border-radius: 50%;
}

.commentItem .commentInfo_block{
  display: flex;
  flex: 5;
  flex-direction: column;
  justify-content: space-around;
}

.commentInfo_block .comment_detail{
  display: flex;
  justify-content: space-between;
}

.comment_detail .author{
  font-size: 28rpx;
}

.comment_detail .date{
  font-size: 24rpx;
}

.commentInfo_block .comment_info{
  font-size: 28rpx;
  color: #000;
}